{
  "manifest_version": 3,
  "name": "Emotional Tone Highlighter",
  "version": "1.0",
  "description": "Highlights text on web pages based on user-defined emotional tones.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Emotional Tone Highlighter"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}